<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileAction.ChangePasswordActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <TextView
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Mật khẩu cũ:"/>
    <EditText
        android:id="@+id/editOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="--Nhập--"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/edittext_box"
        android:padding="6dp"
        android:inputType="textPassword"
        android:textColorHint="#B0BEC5" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới:"/>
    <EditText
        android:id="@+id/editNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="--Nhập--"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/edittext_box"
        android:padding="6dp"
        android:inputType="textPassword"
        android:textColorHint="#B0BEC5" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Nhập lại mật khẩu:"/>
    <EditText
        android:id="@+id/edtReNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="--Nhập--"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/edittext_box"
        android:padding="6dp"
        android:inputType="textPassword"
        android:textColorHint="#B0BEC5" />
    <TableRow
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
        <Button
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            style="@style/ButtonSecondStyle"
            android:text="Huỷ"
            android:textColor="@color/black"
            android:id="@+id/btnCancelChangePassword"
            />
        <Button
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            style="@style/ButtonMainStyle"
            android:text="Xác nhận"
            android:id="@+id/btnConfirmChangePassword"
            />
    </TableRow>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>