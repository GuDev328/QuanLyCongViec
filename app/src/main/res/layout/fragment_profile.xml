<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <TextView android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <Button
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                style="@style/ButtonSecondStyle"
                android:text="Chỉnh sửa"
                />
        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo"/>
        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <TextView android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <Button
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                style="@style/ButtonSecondStyle"
                android:text="Đổi mật khẩu"
                />
        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Email:"/>
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="--Nhập--"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edittext_box"
            android:padding="6dp"
            android:textColorHint="#B0BEC5" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Họ tên:"/>
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="--Nhập--"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edittext_box"
            android:padding="6dp"
            android:textColorHint="#B0BEC5" />
        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <TextView android:layout_weight="3"
                android:layout_width="match_parent"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Giới tính "/>
            <RadioGroup android:id="@+id/groupGender" android:orientation="horizontal" android:layout_weight="2">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nam"
                    android:buttonTint="@color/radio_button_color"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nữ"
                    android:buttonTint="@color/radio_button_color"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Khác"
                    android:buttonTint="@color/radio_button_color"
                    />

            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <TextView android:layout_weight="3"
                android:layout_width="match_parent"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"/>
            <Button
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                style="@style/ButtonSecondStyle"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:text="Chọn ngày"
                android:id="@+id/btnBirthDay"
                />
        </TableRow>
        <Button
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            style="@style/ButtonSecondStyle"
            android:text="Xác nhận"
            />
        <Button
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            style="@style/ButtonSecondStyle"
            android:text="Huỷ"
            />
    </LinearLayout>

</FrameLayout>